#!/usr/bin/env bash

mkdir ../tmp

awk '/Error / || /Warning / || /Info / || /Note /' ../results/raw_flexelint_report.txt > ../tmp/err_warn_inf.tmp
awk '!/Error 309: #error/' ../tmp/err_warn_inf.tmp > ../tmp/err_warn_inf_filtered1.tmp
awk '!/.lnt/' ../tmp/err_warn_inf_filtered1.tmp > ../tmp/err_warn_inf_filtered.tmp
awk '{system("./get_code_author " $1 " " $2); print " " $0}' ../tmp/err_warn_inf_filtered.tmp > ../tmp/err_warn_inf_names.tmp

# Print list of commiters who have Warnings/Errors etc.
awk '{print $1}' ../tmp/err_warn_inf_names.tmp | awk '!x[$0]++'

# @TODO Check from names_and_aliases.txt if new aliases appeared

rm -Rf ../tmp

